{
  "name": "ad-marketplace-api",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "bun --env-file=../../.env --hot src/index.ts",
    "build": "bun build src/index.ts --outdir dist --target bun",
    "start": "bun run dist/index.js",
    "db:generate": "bunx --env-file=../../.env --bun drizzle-kit generate",
    "db:push": "bun run --env-file=../../.env drizzle-kit push",
    "db:migrate": "bun run --env-file=../../.env drizzle-kit migrate"
  },
  "dependencies": {
    "@neondatabase/serverless": "^1.0.2",
    "@tma.js/init-data-node": "^2.0.6",
    "drizzle-orm": "^0.45.1",
    "hono": "^4.11.5",
    "shared": "workspace:*"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "drizzle-kit": "^0.31.8"
  }
}
